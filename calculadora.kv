<CalculadoraLayout>:
    orientation: "vertical"
    padding: 10
    spacing: 10

    TextInput:
        id: display
        font_size: 40
        size_hint_y: 0.25
        halign: "right"
        multiline: False
        readonly: False
        background_color: 0.1, 0.1, 0.1, 1
        foreground_color: 1, 1, 1, 1

    GridLayout:
        cols: 4
        spacing: 8

        Button:
            text: "7"
            on_press: root.add_to_display(self.text)
        Button:
            text: "8"
            on_press: root.add_to_display(self.text)
        Button:
            text: "9"
            on_press: root.add_to_display(self.text)
        Button:
            text: "÷"
            on_press: root.add_to_display(self.text)

        Button:
            text: "4"
            on_press: root.add_to_display(self.text)
        Button:
            text: "5"
            on_press: root.add_to_display(self.text)
        Button:
            text: "6"
            on_press: root.add_to_display(self.text)
        Button:
            text: "x"
            on_press: root.add_to_display(self.text)

        Button:
            text: "1"
            on_press: root.add_to_display(self.text)
        Button:
            text: "2"
            on_press: root.add_to_display(self.text)
        Button:
            text: "3"
            on_press: root.add_to_display(self.text)
        Button:
            text: "-"
            on_press: root.add_to_display(self.text)

        Button:
            text: "0"
            on_press: root.add_to_display(self.text)
        Button:
            text: "."
            on_press: root.add_to_display(self.text)
        Button:
            text: "="
            on_press: root.calcular()
        Button:
            text: "+"
            on_press: root.add_to_display(self.text)

        Button:
            text: "sin"
            on_press: root.add_to_display(self.text)
        Button:
            text: "cos"
            on_press: root.add_to_display(self.text)
        Button:
            text: "√"
            on_press: root.add_to_display(self.text)
        Button:
            text: "^"
            on_press: root.add_to_display(self.text)
        Button:
            text: "π"
            on_press: root.add_pi()
        Button:
            text: "("
            on_press: root.add_to_display(self.text)
        Button:
            text: ")"
            on_press: root.add_to_display(self.text)

        Button:
            text: "Limpar/Clear"
            on_press: root.clear_display()